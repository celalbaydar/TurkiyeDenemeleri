<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/item_remaining_time_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/ic_calander">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.turkiyedenemeleri.customviews.TDTextView
                            android:id="@+id/saat"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="17:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_xxlarge"
                            app:tvFontName="Bold.otf" />

                        <com.turkiyedenemeleri.customviews.TDTextView
                            android:id="@+id/tv_ay"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="BİTİŞ"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_xlarge"
                            app:tvFontName="Bold.otf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <com.turkiyedenemeleri.customviews.TDTextView
                            android:id="@+id/tv_sınav_adi"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:gravity="center_vertical"
                            android:text="Ygs Denemesi 3"
                            android:textSize="@dimen/font_xlarge"
                            app:tvFontName="Regular.otf" />


                        <com.turkiyedenemeleri.customviews.TDTextView
                            android:id="@+id/tv_kisi"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:gravity="center_vertical"
                            android:text="10 kişi kaydoldu"
                            android:textSize="@dimen/font_xlarge"
                            app:tvFontName="Regular.otf" />

                        <com.turkiyedenemeleri.customviews.TDButton
                            android:id="@+id/basla"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/blue_btn_bg_color"
                            android:drawableRight="@drawable/start_icon"
                            android:text="SINAVA\nBAŞLA"
                            tools:ignore="RelativeOverlap" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>